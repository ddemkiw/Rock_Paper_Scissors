
  <body>
    <h1 class="win_h1">
      
      <%if @winner == nil %>
        <%= "Draw!" %>
      <%else%>
          <% if @winner.name == "You"%>
            <%= "#{@winner.name} win" %> </br>
          <%end%>
        <%= "The winner: #{@winner.name}, picked #{@winner.pick}" %></br>
        <% end %>
      <p>

      <a id="play-again" href='/clear'>Play Again</a>
      </p>

    </h1> 
  </body>
